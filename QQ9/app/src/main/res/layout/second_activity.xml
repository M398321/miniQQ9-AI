<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SecondActivity"
    android:id="@+id/second"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<RelativeLayout
    android:background="@color/mikucolor"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/touxiang"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/xp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="6dp" />


    <TextView
        android:layout_marginTop="3dp"
        android:textSize="20sp"
        android:id="@+id/name"
        android:layout_toRightOf="@id/touxiang"
        android:textColor="@color/white"
        android:layout_marginLeft="15dp"
        android:text="M"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/zhuangtai"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/name"
        android:layout_toRightOf="@id/touxiang"
        android:layout_width="15dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginBottom="6dp"
        android:layout_height="15dp" />

    <TextView
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/zhuangtai"
        android:textColor="@color/white"
        android:layout_below="@id/name"
        android:text="我在听歌 >"
        android:layout_marginBottom="6dp"
        android:layout_height="wrap_content"/>


    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/add_ok" />

</RelativeLayout>
    </LinearLayout>

    <ListView
        android:layout_marginTop="20dp"
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:divider="@android:color/transparent"
        android:dividerHeight="20dp" />


<!--    <FrameLayout-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_weight="1">-->
<!--    </FrameLayout>-->

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <include layout="@layout/content_nav" />
    </LinearLayout>
</LinearLayout>
